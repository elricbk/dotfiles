set hlsearch
set nu
set relativenumber
set ignorecase
set smartcase

set ts=4
set sw=4
set et

" Let's use 'screen lines' instead of actual ones
nnoremap j gj
nnoremap k gk

nnoremap c> *Nciw
nnoremap c< #Nciw
nnoremap <C-l> :noh<CR>

nnoremap ,r :run<CR>
nnoremap ,t :xccmd openQuickly<CR>
nnoremap ,c<Space> :xcmenucmd Comment selection<CR>
vnoremap ,c<Space> :xcmenucmd Comment selection<CR>

cnoremap <C-j> <CR>
inoremap <C-j> <CR>
